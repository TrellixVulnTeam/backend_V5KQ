{{#if success }}
<div class="alert alert-success" role="alert">
    <strong>Chúc mừng!</strong> Bạn đã đăng nhập thành công.
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

{{ else }}
{{#if errors }}
<section class="errors">
    <ul>
        {{#each errors }}
        <div class="alert alert-danger" role="alert">
            {{this.msg}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {{/each}}
    </ul>
</section>
{{/if}}
{{/if}}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng kí</title>

</head>

<body>
    <div class="grid__full-width app-login">

        <div class="app-login-2">

            <form class="needs-validation form-register" method="POST" action="/seller/verifyaccount" novalidate>
                    <div class="form-group modal-form-title d-flex justify-content-center">
                        <div class="title-register">Đăng nhập</div>
                      
                    </div>
                    <div class="form-group">
                      <label for="email">Địa chỉ email</label>
                      <input type="email" class="form-control modal-input" id="username" name="username" placeholder="Nhập email của bạn" required>
                      <div class="valid-feedback">
                        Looks good!
                      </div>
                      <div class="invalid-feedback" >
                        Vui lòng nhập email
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="password">Mật khẩu</label>
                      <input type="password" class="form-control modal-input" id="password" name="password"  placeholder="Nhập mật khẩu của bạn" required >
                      <div class="valid-feedback">
                        Looks good!
                      </div>
                      <div class="invalid-feedback" >
                        Vui lòng nhập mật khẩu
                      </div>
                    </div>
                    <div class="form-group">
                      <label >Quên mật khẩu?</label>
                      
                    </div>
             
                     <div class="form-group d-flex justify-content-center">
                         <button class="btn1 btn--highlight " type="button"  data-dismiss="modal">Trở lại</button>
                         <button type="submit" class="btn1 btn--primary form-btn-submit">Đăng nhập</button>
                     </div>
                      
                </form>
        </div>

    </div>

</body>

</html>