<div class="grid">

  <div class="container">

  <div class="mt-5 mb-5">
    <div class="d-flex justify-content-center">

      <h3 class="form-title">ĐƠN ĐẶT HÀNG</h3>
    </div>

    <form method="POST" action="/order//storenow" class="form-create-now">
      <div class="form-group">
        <label for="name">Họ tên người nhận</label>
        <input type="text" class="form-control input-create-now" id="name" name="name" required>
      </div>

      <div class="form-group">
        <label for="address">Địa chỉ nhận hàng</label>
        <input type="text" class="form-control input-create-now" id="address" name="address" required>
      </div>

      <div class="form-group">
        <label for="addresspm">Địa chỉ thanh toán</label>
        <input type="text" class="form-control input-create-now" id="addresspm" name="addresspm" required>
      </div>

      <div class="form-group">
        <label for="phone">Số điện thoại</label>
        <input type="number" class="form-control input-create-now" id="phone" name="phone" required>
      </div>

      <div class="form-group">
        <label for="productname">Sản phẩm</label>
        <input type="text" class="form-control input-create-now" value="{{book.name}}" id="productname" name="productname">
      </div>

      <div class="form-group">
        <label for="productname">Book ID</label>
        <input type="text" class="form-control input-create-now" value="{{book._id}}" id="bookid" name="bookid">
      </div>

      <div class="form-group">
        <label for="quantity">Số lượng</label>
        <input type="text" class="form-control input-create-now" value="{{quanty}}" id="quantity" name="quantity">
      </div>

      <div class="form-group">
        <label for="price">Gía tiền</label>
        <input type="text" class="form-control input-create-now" value="{{book.price}}" id="price" name="price">
      </div>

      <div class="form-group">
        <label for="totalprice">Tổng tiền</label>
        <input type="text" class="form-control input-create-now" value="{{multi quanty book.price}}" id="totalprice" name="totalprice">
      </div>

      <div class="d-flex justify-content-center">

        <button type="submit" class="btn1 btn--primary btn-create-now">Đặt hàng</button>
      </div>
      
      
    </form>

  </div>
    </div>

</div>